{
  "manifest_version": 3,
  "name": "Form Auto-Fill",
  "version": "1.0.0",
  "description": "Auto-fill forms with random data for testing purposes",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icons/icon16.png",
    "32": "icons/icons/icon32.png",
    "48": "icons/icons/icon48.png",
    "128": "icons/icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icons/icon16.png",
      "32": "icons/icons/icon32.png",
      "48": "icons/icons/icon48.png",
      "128": "icons/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle"
    }
  ]
}
